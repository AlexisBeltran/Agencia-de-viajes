                button.background.mt-2.mb-4.btn.btn-hover.px-5 Nuevo Viaje
                .justify-content-center.row.table-responsive
                    table.table
                        thead.background
                            tr.py.text-center
                                th ID
                                th Titulo 
                                th Precio  
                                th Fecha Ida
                                th Fecha Vuelta
                                th Descripci√≥n
                                th Acciones
                        tbody
                            each viaje in Viajes
